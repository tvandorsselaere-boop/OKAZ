{
  "manifest_version": 3,
  "name": "OKAZ - Comparateur d'annonces",
  "version": "0.5.0",
  "description": "Comparez LeBonCoin, Vinted, Back Market et Amazon en une recherche",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.leboncoin.fr/*",
    "https://www.vinted.fr/*",
    "https://www.backmarket.fr/*",
    "https://www.amazon.fr/*"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost/*",
      "http://127.0.0.1/*",
      "https://*.vercel.app/*",
      "https://okaz-ia.fr/*",
      "https://*.okaz-ia.fr/*"
    ]
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "OKAZ"
  },
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.leboncoin.fr/recherche*"],
      "js": ["src/content/leboncoin.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.vinted.fr/*"],
      "js": ["src/content/vinted.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.backmarket.fr/*"],
      "js": ["src/content/backmarket.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.amazon.fr/s*"],
      "js": ["src/content/amazon.js"],
      "run_at": "document_idle"
    }
  ]
}
